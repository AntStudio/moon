<?xml version="1.0" encoding="UTF-8"?>
<web-app version="2.5" xmlns="http://java.sun.com/xml/ns/javaee"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://java.sun.com/xml/ns/javaee
 http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd">
 
	<display-name>moon</display-name>
	<context-param>
		<param-name>webAppRootKey</param-name>
		<param-value>moon</param-value>
	</context-param>
	<!-- Spring Listener 需要加载的配置文件 -->
	<context-param>
		<param-name>contextConfigLocation</param-name>
		<param-value>/WEB-INF/applicationContext*.xml</param-value>
	</context-param>
	
	<context-param>
		<param-name>log4jConfigLocation</param-name>
		<param-value>WEB-INF/config/log4j.properties</param-value>
	</context-param>
	
	<!-- listeners -->
	<listener>
		<listener-class>org.springframework.web.util.Log4jConfigListener</listener-class>
	</listener>
	
	<listener>
		<listener-class>org.moon.core.spring.MoonContextListener</listener-class>
	</listener>
	<!-- /listeners -->
	
	<!-- filters -->
	
	<!-- 编码设置 -->
	<filter>
		<filter-name>encodingFilter</filter-name>
		<filter-class>org.springframework.web.filter.CharacterEncodingFilter</filter-class>
		<init-param>
			<param-name>encoding</param-name>
			<param-value>UTF-8</param-value>
		</init-param>
	</filter>
	
	<filter-mapping>
		<filter-name>encodingFilter</filter-name>
		<url-pattern>/*</url-pattern>
	</filter-mapping>
	<!-- /编码设置 -->
	
	<!-- Session上下文设置 -->
	<filter>
		<filter-name>sessionFilter</filter-name>
		<filter-class>org.moon.core.session.SessionFilter</filter-class>
	</filter>
	
	<filter-mapping>
		<filter-name>sessionFilter</filter-name>
		<url-pattern>/*</url-pattern>
	</filter-mapping>
	<!-- /Session上下文设置 -->
	
	
	<!-- /filters -->
	
	<!-- Servlet -->
	
	<servlet>
		<servlet-name>spring</servlet-name>
		<servlet-class>org.moon.core.spring.MoonServlet</servlet-class>
		<load-on-startup>1</load-on-startup>
	</servlet>
	<servlet-mapping>
		<servlet-name>spring</servlet-name>
		<url-pattern>/</url-pattern>
		<!-- url配置为/,不带文件后缀，静态文件的访问用mvc:resources标签处理 -->
	</servlet-mapping>
	
	<!-- /Servlet -->
	
	
	<!-- 欢迎页 -->
	<welcome-file-list>
		<welcome-file>index.jsp</welcome-file>
	</welcome-file-list>
	<!-- /欢迎页 -->
</web-app>